  .topics__search-bar--filters
    .select-group.select-group--normal.select-group--1.multi-select(data-select='categories')
      .select-container
        .selected
          | Select category
        .select-box
          .option-container.option-container--orient-left(data-simplebar='' data-simplebar-auto-hide='false')
            each category in categories
              .option
                input.option__radio(id=`${category}` type='checkbox' value=`${category}` name='category')
                label.option__label(for=`${category}`)= category
    .select-group.select-group--normal.select-group--2.multi-select(data-select='tags')
      .select-container
        .selected
          | Select tags
        .select-box
          .option-container.option-container--orient-right(data-simplebar='' data-simplebar-auto-hide='false')
            each tag in tags
              .option
                input.option__radio(id=`${tag.name}` type='checkbox' value=`${tag.name}` name='tags')
                label.option__label(for=`${tag.name}`)= tag.name
    span.btn.btn--small.btn-black#filter-topics Filter
