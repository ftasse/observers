.navigation
  a.navigation__logo(href='/')
    img(src='/img/Group%2029@2x.png' alt='logo')
  ul.nav
    li.nav__item
      a.nav__link.nav__link--baseline.nav__link--active(href='/') Home
    li.nav__item
      a.nav__link.nav__link--baseline(href='/topic.html') Topics
    li.nav__item
      a.nav__link.nav__link--baseline(href='#') About
    if user
      li.nav__item
        button.sign-out.nav__link.nav__link--cta
          span Sign out
      li.nav__item
        a.nav__link.nav__link--baseline(href='#')= user.name
    else
      li.nav__item
        a.nav__link.nav__link--cta(href='/login')
          span Sign in
      li.nav__item
        a.nav__link.nav__link--cta.nav__link--cta--secondary(href='/signup')
          span Sign up